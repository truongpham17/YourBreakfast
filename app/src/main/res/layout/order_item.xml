<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/secondaryDark"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="One More Step!"
        android:textColor="@color/colorPrimary"
        android:textSize="24dp" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/txtUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:gravity="bottom"
        android:hint="Enter Your Name"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextColor="@color/secondaryDark"
        app:met_floatingLabelTextSize="14sp"
        app:met_textColor="@android:color/black" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/txtPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:gravity="bottom"
        android:hint="Enter Your Phone"
        android:inputType="phone"
        android:textSize="16sp"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextColor="@color/secondaryDark"
        app:met_floatingLabelTextSize="14sp"
        app:met_textColor="@android:color/black" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/txtAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:gravity="bottom"
        android:hint="Enter Your Address"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextColor="@color/secondaryDark"
        app:met_floatingLabelTextSize="14sp"
        app:met_textColor="@android:color/black" />

    <TextView
        android:id="@+id/txtContent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="You order 1 Food. Total Price: $1000"
        android:textColor="@color/secondaryDark"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnDelivery"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/mybutton"
        android:text="Delivery Now"
        android:textColor="@color/colorPrimary" />


</LinearLayout>

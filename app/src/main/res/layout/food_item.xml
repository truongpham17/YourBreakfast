<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardMaxElevation="8dp"
    android:layout_height="220dp"
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="8dp"
    >
    <ImageView
        android:id="@+id/imageCategory"
        android:src="@color/secondaryLight"
        android:contentDescription="This is image of food"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:background="#4f0e0d0e"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtCategoryName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:padding="4dp"
            android:text="Hello"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtPrice"
            android:padding="4dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="8dp"
            android:layout_below="@id/txtCategoryName"
            android:text="Price: 1000$"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/imgShareToFb"
            android:contentDescription="Button share to facebook"
            android:layout_toStartOf="@id/imgOrder"
            android:layout_margin="12dp"
            android:src="@drawable/ic_share_black_36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/imgOrder"
            android:src="@drawable/ic_local_grocery_store_white_36dp"
            android:layout_margin="12dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>



</android.support.v7.widget.CardView>

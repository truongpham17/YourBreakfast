<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">
    <TextView
        android:id="@+id/txtTitle"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:text="Edit Password"
        android:gravity="center"
        android:background="@color/secondaryDark"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/txtPassword"
        android:hint="Enter your old password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_below="@id/txtTitle"
        android:drawableStart="@drawable/ic_password_blue_24dp"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:inputType="textPassword"
        android:textColor="#616161" />
    <EditText
        android:id="@+id/txtNewPassword"
        android:hint="Enter your new password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_below="@id/txtPassword"
        android:drawableStart="@drawable/ic_password_blue_24dp"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:inputType="textPassword"
        android:textColor="#616161" />
    <EditText
        android:id="@+id/txtReNewPassword"
        android:hint="Enter your new password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_below="@id/txtNewPassword"
        android:drawableStart="@drawable/ic_password_blue_24dp"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:inputType="textPassword"
        android:textColor="#616161" />
    <Button
        android:id="@+id/btnSubmit"
        android:layout_marginTop="4dp"
        android:background="@drawable/mybutton"
        android:textColor="@color/colorPrimary"
        android:text="Add"
        android:layout_below="@id/txtReNewPassword"
        android:layout_centerHorizontal="true"
        android:layout_width="120dp"
        android:layout_height="wrap_content" />


</RelativeLayout>
